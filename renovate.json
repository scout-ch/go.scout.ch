{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["every weekend"],
  "prCreation": "immediate",
  "packageRules": [
    {
      "groupName": "all-dependencies",
      "matchPackageNames": ["*"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
